#!/bin/sh
#
# wifi        Starts wifi.
#


start() {
	echo "Starting wlan..."
	modprobe wl1271_sdio
	echo "Module loaded..."
	ifconfig wlan0 hw ether 02:01:02:03:04:05
	echo "Interface configured..."
	ifconfig wlan0 up
	echo "Wlan is up!"
	echo "PROGRESS 30" > /tmp/psplash_fifo
	echo "MSG WiFi" > /tmp/psplash_fifo
}
stop() {
	echo "Stopping wifi"
	echo "PROGRESS 60" > /tmp/psplash_fifo
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

